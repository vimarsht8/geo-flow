{
  "manifest_version": 3,
  "name": "GEO FLOW",
  "version": "1.0",
  "description": "Tracks browsing data flow and exposure",

  "permissions": [
    "notifications",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html"
  }
}
